@-moz-document domain("youtube.com") {
    
    // video description
    body,
    ytd-app,
    ytd-masthead,
    #guide-content.ytd-app,
    #columns.ytd-watch-flexy,
    ytd-browse[page-subtype="channels"],
    .content.ytd-video-secondary-info-renderer,
    ytd-app[is-watch-page],
    ytd-watch-flexy {
        color: gruv-fg0-ww !important;
        background: gruv-bg0_h !important;
    }
            
    // video title by side bar and description "show more"
    a,
    h3.ytd-compact-video-renderer,
    .more-button.ytd-video-secondary-info-renderer,
    .less-button.ytd-video-secondary-info-renderer,
    .title.ytd-guide-entry-renderer {
        color: gruv-fg0-w !important;
    }
        
    // title and comment count
    #title.ytd-shelf-renderer,
    .title.ytd-video-primary-info-renderer,
    #upnext.ytd-compact-autoplay-renderer,
    yt-formatted-string.ytd-comments-header-renderer,
    #channel-title.ytd-c4-tabbed-header-renderer {
        color: gruv-fg0-w !important;
    }

    // comment "days ago"
    yt-formatted-string[has-link-only_]:not([force-default-style]) a.yt-simple-endpoint.yt-formatted-string {
        color: gruv-fg0-w !important;
    }
    
    // comment text
    #content-text.ytd-comment-renderer {
        color: gruv-fg0-ww !important;
    }
    
    // author text    
    #author-text.yt-simple-endpoint.ytd-comment-renderer {
        color: color-fg0-ww !important;
    }

    // youtube icon, dislike, like, checkmark, love, "view replies" arrow and literaly every icon
    // if you want to change something, change this one first
    .yt-icon {
        color: gruv-fg0-ww !important;
    }
        
    // "add a public comment"
    #simplebox-placeholder.ytd-comment-simplebox-renderer {
        color: gruv-fg0-ww !important;
    }
        
    // like number    
    #action-buttons.ytd-comment-renderer {
        color: gruv-fg0-w !important;
    }
        
    html:not(.style-scope)[dark],
    :not(.style-scope)[dark] {
        // links and "view more comment" and "Reply" button
        --yt-spec-call-to-action: color-fg0-w !important;
        
        // secondary text like sub count, views, date, and "reply button"
        --yt-spec-text-secondary: gruv-fg0-ww !important;
        
        // "share" "save", "like count", "sort by"
        --yt-spec-text-primary: gruv-fg0-w !important;
        
        // sub button
        --yt-spec-brand-button-background: color-things-contrast
        --yt-spec-brand-link-text: gruv-fg0-w !important;
    }
}
